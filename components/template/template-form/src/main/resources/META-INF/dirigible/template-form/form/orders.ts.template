import { Controller, Post } from "@aerokit/sdk/http"
import { uuid } from "@aerokit/sdk/utils"

@Controller
class OrdersService {

    @Post("/")
    public createOrder(orderData: any) {
        console.log(`Order Accepted: ${JSON.stringify(orderData, null, 4)}`);
        return {
            orderId: uuid.random(),
            status: 'Accepted'
        };
    }

}
