<!DOCTYPE HTML>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml" ng-app="page" ng-controller="PageController">

    <head>
		<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" sizes="any" href="data:;base64,iVBORw0KGgo=">
        <title config-title></title>
        <script type="text/javascript" src="view.js"></script>
        <meta name="platform-links" category="ng-view">
        <script type="text/javascript" src="controller.js"></script>
    </head>

    <body class="bk-vbox">
        <bk-scrollbar class="bk-full-height">
			<bk-message-strip class="fd-margin--md" ng-show="errorMessage" glyph="sap-icon--message-error" state="error" on-dismiss="clearErrorMessage()">{{ errorMessage }}</bk-message-strip>

            <bk-fieldset class="fd-padding-begin-end--sm" ng-form="forms.details">
                <bk-form-group label="{{ '$projectName:${tprefix}.defaults.formGrpFilter' | t:{'name':'$t($projectName:${tprefix}.t.${dataName})'} }}" name="entityForm" transclude-classes="fd-container fd-form-layout-grid-container">
#foreach ($property in $properties)
#if(!$property.dataAutoIncrement)
#if($property.widgetType == "DROPDOWN")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
	                        <bk-combobox-input input-id="id${property.name}"
								#if($property.widgetDropDownMultiSelect)
								multi-select="true"
								#end
	                            name="${property.name}"
	                            state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                            ng-model="entity.${property.name}"
	                            dropdown-items="options${property.name}"
	                            placeholder="{{ '$projectName:${tprefix}.messages.inputSearch' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}"
								btn-aria-label="{{ '$projectName:${tprefix}.aria.showHide' | t:{'name':'${property.name}'} }}" list-aria-label="{{ '$projectName:${tprefix}.aria.options' | t:{'name':'${property.name}'} }}">
	                        </bk-combobox-input>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "CHECKBOX")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2"></div>
	                    <div class="fd-col fd-col-md--8">
							<bk-checkbox id="id${property.name}"
	                            compact="false"
								ng-init="entity.is${property.name}Indeterminate=true"
								ng-model="entity.${property.name}"
								indeterminate="entity.is${property.name}Indeterminate"
								ng-click="entity.is${property.name}Indeterminate=false">
	                        </bk-checkbox>
                        	<bk-checkbox-label for="id${property.name}">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-checkbox-label>
                        </div>
                    </bk-form-item>
#elseif($property.widgetType == "COLOR")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	                                type="color"
	                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "NUMBER")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
	                        <bk-step-input input-id="id${property.name}"
								name="${property.name}"
								state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
								ng-model="entity.${property.name}"
								placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
							</bk-step-input>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "MONTH")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	                                type="month">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "WEEK")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	                                type="week">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "TIME")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	                                type="time">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "DATETIME-LOCAL")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}From" colon="true">{{ '$projectName:${tprefix}.defaults.from' | t:{'text':'$t($projectName:${tprefix}.t.$property.dataName)'} }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--3">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}From"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}From"
	                                type="datetime-local">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}To" colon="true">{{ '$projectName:${tprefix}.defaults.to' | t:{'text':'$t($projectName:${tprefix}.t.$property.dataName)'} }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--3">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}To"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}To"
	                                type="datetime-local">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "DATE")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}From" colon="true">{{ '$projectName:${tprefix}.defaults.from' | t:{'text':'$t($projectName:${tprefix}.t.$property.dataName)'} }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}From"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}From"
	                                type="date">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}To" colon="true">{{ '$projectName:${tprefix}.defaults.to' | t:{'text':'$t($projectName:${tprefix}.t.$property.dataName)'} }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}To"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}To"
	                                type="date">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "TEXTAREA")
					<bk-form-item class="fd-row">
						<div class="fd-col fd-col-md--2">
							<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
						</div>
						<div class="fd-col fd-col-md--8">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-textarea id="id${property.name}"
									name="${property.name}"
									state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
									ng-model="entity.${property.name}"
	#if($property.minLength)
									ng-minlength="${property.minLength}"
	#end
	#if($property.maxLength)
									ng-maxlength="${property.maxLength}"
	#end
									placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
								</bk-textarea>
							</bk-form-input-message>
						</div>
					</bk-form-item>
#elseif($property.widgetType == "TEL")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	#if($property.minLength)
									ng-minlength="${property.minLength}"
	#end
	#if($property.maxLength)
									ng-maxlength="${property.maxLength}"
	#end
	                                type="tel"
	                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "URL")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	#if($property.minLength)
									ng-minlength="${property.minLength}"
	#end
	#if($property.maxLength)
									ng-maxlength="${property.maxLength}"
	#end
	                                type="url"
	                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#elseif($property.widgetType == "EMAIL")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	#if($property.minLength)
									ng-minlength="${property.minLength}"
	#end
	#if($property.maxLength)
									ng-maxlength="${property.maxLength}"
	#end
	                                type="email"
	                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#else
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
							<bk-form-input-message state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}" text="{{'$projectName:${tprefix}.messages.error.incorrectInput' | t}}">
								<bk-input id="id${property.name}"
	                                name="${property.name}"
	                                state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
	                                ng-model="entity.${property.name}"
	#if($property.minLength)
									ng-minlength="${property.minLength}"
	#end
	#if($property.maxLength)
									ng-maxlength="${property.maxLength}"
	#end
	                                type="text"
	                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
	                            </bk-input>
							</bk-form-input-message>
	                    </div>
                    </bk-form-item>
#end
#end
#end
                </bk-form-group>
            </bk-fieldset>
        </bk-scrollbar>

		<bk-bar bar-design="footer" compact="true" ng-show="action !== 'select'">
			<bk-bar-right>
				<bk-bar-element>
					<bk-button label="{{ '$projectName:${tprefix}.defaults.filter' | t }}" state="emphasized" ng-click="filter()"></bk-button>
				</bk-bar-element>
				<bk-bar-element>
					<bk-button label="{{ '$projectName:${tprefix}.defaults.reset' | t }}" ng-click="resetFilter()"></bk-button>
				</bk-bar-element>
				<bk-bar-element>
					<bk-button label="{{ '$projectName:${tprefix}.defaults.cancel' | t }}" ng-click="cancel()"></bk-button>
				</bk-bar-element>
			</bk-bar-right>
		</bk-bar>
		<theme></theme>
    </body>

</html>
