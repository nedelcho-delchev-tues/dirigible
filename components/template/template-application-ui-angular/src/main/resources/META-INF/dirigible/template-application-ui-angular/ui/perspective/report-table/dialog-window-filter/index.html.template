<!DOCTYPE HTML>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml" ng-app="page" ng-controller="PageController">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" sizes="any" href="data:;base64,iVBORw0KGgo=">
        <title config-title></title>
        <script type="text/javascript" src="view.js"></script>
        <script type="text/javascript" src="/services/js/platform-core/services/loader.js?id=view-js"></script>
        <link type="text/css" rel="stylesheet" href="/services/js/platform-core/services/loader.js?id=view-css" />
        <script type="text/javascript" src="controller.js"></script>
    </head>

    <body class="bk-vbox">
        <bk-scrollbar class="bk-full-height">
            <bk-fieldset class="fd-padding-begin-end--sm" ng-form="forms.details">
                <bk-form-group label="{{'$projectName:${tprefix}.defaults.reportFilter' | t}}" name="entityForm" transclude-classes="fd-container fd-form-layout-grid-container">
#foreach ($property in $filter.properties)
#if(!$property.dataAutoIncrement && !$property.dataPrimaryKey)
#if($property.widgetType == "DROPDOWN")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" ng-required="${property.isRequiredProperty}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
                        <bk-combobox-input input-id="id${property.name}"
                            #if($property.widgetDropDownMultiSelect)
                            multi-select="true"
                            #end
                            name="${property.name}"
#if(!$property.isCalculatedProperty)
                            state="{{ forms.details['${property.name}'].$valid ? '' : 'error' }}"
                            ng-required="${property.isRequiredProperty}"
#end
                            ng-model="entity.${property.name}"
#if($property.isCalculatedProperty == "true")
                            is-readonly="true"
#end
                            dropdown-items="options${property.name}"
                            placeholder="{{ '$projectName:${tprefix}.messages.inputSearch' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}"
                            btn-aria-label="{{ '$projectName:${tprefix}.aria.showHide' | t:{'name':'${property.name}'} }}" list-aria-label="{{ '$projectName:${tprefix}.aria.options' | t:{'name':'${property.name}'} }}">
