	#end
    #if(!$property.isCalculatedProperty)
                                input-rules="{ patterns: ['${property.inputRule}'] }"
    #end
                                placeholder="{{ '$projectName:${tprefix}.messages.inputEnter' | t:{'name':'$t($projectName:${tprefix}.t.$property.dataName)'} }}">
                            </bk-textarea>
#if(!$property.isCalculatedProperty)
                        </bk-form-input-message>
#end
					</bk-form-item>
#elseif($property.widgetType == "TEL")
                    <bk-form-item class="fd-row">
                    	<div class="fd-col fd-col-md--2">
                        	<bk-form-label for="id${property.name}" ng-required="${property.isRequiredProperty}" colon="true">{{ '$projectName:${tprefix}.t.$property.dataName' | t }}</bk-form-label>
                        </div>
